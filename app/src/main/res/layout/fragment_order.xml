<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Order"
                android:textSize="40dp"
                android:textColor="@color/colorPurple"
                android:layout_gravity="center|top"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:scrollbars="none">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:background="@drawable/order_bg" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Coming"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:background="@drawable/order_bg"
                    android:layout_marginStart="25dp"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:background="@drawable/order_bg"
                    android:layout_marginStart="25dp"/>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="horizontal">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/hamburger"
                        android:layout_marginStart="10dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x2"
                        android:textColor="@color/colorPurple"
                        android:textSize="25dp"
                        android:layout_gravity="center" />
                    
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:text="Hamburgers"
                        android:textColor="@color/colorPurple"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Chicken World"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="69 vinh ho"
                        android:textSize="20dp"
                        android:layout_marginStart="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming in 25 minutes"
                        android:layout_marginStart="5dp"
                        android:textSize="19dp"
                        android:textColor="@color/colorBlue"/>

                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@drawable/order_coming"
                    android:text="Coming"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/hamburger"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x2"
                        android:textColor="@color/colorPurple"
                        android:textSize="25dp"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:text="Hamburgers"
                        android:textColor="@color/colorPurple"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Chicken World"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="69 vinh ho"
                        android:textSize="20dp"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@drawable/order_completed"
                    android:text="Completed"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="12dp"/>

            </LinearLayout>

        </LinearLayout>
        
    </androidx.core.widget.NestedScrollView>

</LinearLayout>