<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signin_bg"
        android:fontFamily="sans-serif"
        android:text="Sign In"
        android:textColor="@color/colorPurple"
        android:textSize="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/edtSigninEmail"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Tungnt@gmail.com"
            android:textColor="@color/colorPurple"
            android:textSize="25dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="35dp"/>

        <EditText
            android:id="@+id/edtSigninPassword"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:text="adssadasd"
            android:textColor="@color/colorPurple"
            android:textSize="25dp"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/txtSignUpAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="Have no account? Sign Up"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="Forget your password?"
            android:textSize="15dp"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSignIn"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/signin_bg2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:text="SIGN IN"
            android:textColor="@color/colorPurple"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:src="@drawable/ic_navigate_next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llGoogle"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/signin_bg3"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:src="@drawable/google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:text="Google"
                android:textColor="#DB4437"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFacebook"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/signin_bg4"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/facebook_64px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:text="Facebook"
                android:textColor="#4267B2"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>